{
  "include": ["shared/**/*", "server/**/*", "types/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "files": ["types/vite-client.d.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "target": "ES2020",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./packager_files/node_modules/@types"
    ],
    "types": ["node"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "vite": ["./packager_files/node_modules/vite"],
      "vite/*": ["./packager_files/node_modules/vite/*"],
      "vite/client": ["./packager_files/node_modules/vite/client.d.ts"]
    }
  }
}
